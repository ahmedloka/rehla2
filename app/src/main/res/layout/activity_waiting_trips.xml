<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_background"
    android:orientation="vertical"
    >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            app:titleTextColor="@android:color/white"
            app:titleTextAppearance="@style/toolbarStyle"
            app:title="@string/waiting_trips"
            android:background="@color/app_color"

            >

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewWaitingTrips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dime_15"
            android:orientation="vertical"
            >
        </android.support.v7.widget.RecyclerView>
        <com.NativeTech.rehla.Utills.MyTextView
            android:id="@+id/no_exist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4_height"
            android:text="@string/no_trips"
            android:textSize="@dimen/_12ssp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/blakcolor"
            />
    </FrameLayout>

</android.support.v7.widget.LinearLayoutCompat>