<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitecolor"
    android:orientation="vertical"
    >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:background="@color/app_color"

            >


        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:padding="@dimen/dime_8"
        android:layout_height="match_parent">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="@dimen/dime_118"
                android:layout_height="@dimen/dime_118"
                android:layout_gravity="center"
                android:padding="@dimen/dime_10"
                android:background="@drawable/ic_add_image_fram"
                android:layout_marginTop="@dimen/dime_20"
                android:gravity="center"
                >
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/back_img"
                    android:layout_width="@dimen/dime_118"
                    android:layout_height="@dimen/dime_118"
                     android:layout_gravity="center"
                    />
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/dime_118"
                    android:layout_height="@dimen/dime_118"
                     android:layout_gravity="center"
                    />
            </FrameLayout>

            <com.NativeTech.rehla.Utills.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dime_5"
                android:text="@string/select_car_brand"
                 android:layout_gravity="center"
                 android:layout_marginTop="@dimen/dime_10"
                android:textColor="@color/gray_selected"
                android:layout_marginStart="@dimen/dime_10"
                android:layout_marginEnd="@dimen/dime_10"
                />
            <com.NativeTech.rehla.Utills.MyTextView
                android:id="@+id/car_brand"
                style="@style/blabla_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/car_brand"
                android:layout_marginStart="@dimen/dime_10"
                android:layout_marginEnd="@dimen/dime_10"
                android:inputType="text"
                android:background="@drawable/editext_bg2"
                android:textColorHint="@color/gray_unselected"
                />
            <com.NativeTech.rehla.Utills.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dime_5"
                android:text="@string/select_car_model"
                 android:layout_gravity="center"
                android:layout_marginTop="@dimen/dime_10"
                android:textColor="@color/gray_selected"
                android:layout_marginStart="@dimen/dime_10"
                android:layout_marginEnd="@dimen/dime_10"
                />
            <com.NativeTech.rehla.Utills.MyTextView
                android:id="@+id/car_model"
                style="@style/blabla_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/car_model"
                android:layout_marginStart="@dimen/half_safe_margin"
                android:layout_marginEnd="@dimen/half_safe_margin"
                android:inputType="text"
                android:background="@drawable/editext_bg2"

                android:textColorHint="@color/gray_unselected"
                />
            <com.NativeTech.rehla.Utills.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dime_5"
                android:text="@string/select_car_type"
                 android:layout_gravity="center"
                android:textColor="@color/gray_selected"
                android:layout_marginTop="@dimen/dime_10"
                android:layout_marginStart="@dimen/dime_10"
                android:layout_marginEnd="@dimen/dime_10"
                />
            <com.NativeTech.rehla.Utills.MyTextView
                android:id="@+id/car_type"
                style="@style/blabla_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/car_type"
                android:layout_marginStart="@dimen/dime_10"
                android:layout_marginEnd="@dimen/dime_10"
                android:inputType="text"
                android:background="@drawable/editext_bg2"

                android:textColorHint="@color/gray_unselected"
                />
            <com.NativeTech.rehla.Utills.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dime_5"
                android:text="@string/select_car_color"
                 android:layout_gravity="center"
                android:textColor="@color/gray_selected"
                android:layout_marginTop="@dimen/dime_10"
                android:layout_marginStart="@dimen/dime_10"
                android:layout_marginEnd="@dimen/dime_10"
                />
            <com.NativeTech.rehla.Utills.MyTextView
                android:id="@+id/car_color"
                style="@style/blabla_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/car_color"
                android:layout_marginStart="@dimen/dime_10"
                android:layout_marginEnd="@dimen/dime_10"
                android:inputType="text"
                android:background="@drawable/editext_bg2"

                android:textColorHint="@color/gray_unselected"
                />
            <com.NativeTech.rehla.Utills.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dime_5"
                android:text="@string/select_production_year"
                 android:layout_gravity="center"
                android:textColor="@color/gray_selected"
                android:layout_marginTop="@dimen/dime_10"
                android:layout_marginStart="@dimen/dime_10"
                android:layout_marginEnd="@dimen/dime_10"
                />
            <com.NativeTech.rehla.Utills.MyTextView
                android:id="@+id/production_year"
                style="@style/blabla_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/_2019"
                android:layout_marginStart="@dimen/dime_10"
                android:layout_marginEnd="@dimen/dime_10"
                android:inputType="text"
                android:background="@drawable/editext_bg2"

                android:textColorHint="@color/gray_selected"
                />

            <com.NativeTech.rehla.Utills.MyTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dime_5"
                 style="@style/tvStyleBold"
                android:layout_gravity="center"
                android:textColor="@color/gray_selected"
                android:layout_marginStart="@dimen/dime_10"
                android:layout_marginEnd="@dimen/dime_10"
                />

            <com.NativeTech.rehla.Utills.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dime_5"
                android:text="@string/select_car_seats"
                 android:layout_gravity="center"
                android:textColor="@color/gray_selected"
                android:layout_marginTop="@dimen/dime_10"
                android:layout_marginStart="@dimen/dime_10"
                android:layout_marginEnd="@dimen/dime_10"
                />
            <com.NativeTech.rehla.Utills.MyTextView
                android:id="@+id/seat_number"
                style="@style/blabla_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/_1"
                android:layout_marginStart="@dimen/dime_10"
                android:layout_marginEnd="@dimen/dime_10"
                android:inputType="text"
                android:background="@drawable/editext_bg2"

                android:textColorHint="@color/gray_unselected"
                />
            <com.NativeTech.rehla.Utills.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dime_5"
                android:text="@string/car_plate"
                 android:layout_gravity="center"
                android:textColor="@color/gray_selected"
                android:layout_marginTop="@dimen/dime_10"
                android:layout_marginStart="@dimen/dime_10"
                android:layout_marginEnd="@dimen/dime_10"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dime_10"
                android:layout_marginEnd="@dimen/dime_10"
                android:gravity="center"
                android:weightSum="10"
                android:layoutDirection="ltr"
                >
                <com.NativeTech.rehla.Utills.MyEditText
                    android:id="@+id/edit_txt1"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"
                    android:maxLength="1"
                    style="@style/blabla_et"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:gravity="center"
                    android:background="@drawable/button_shape_small_border_gray"
                    android:textSize="@dimen/_10ssp"
                    />
                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="wrap_content" />

                <com.NativeTech.rehla.Utills.MyEditText
                    android:id="@+id/edit_txt2"
                    android:layout_width="@dimen/_32sdp"
                    style="@style/blabla_et"
                    android:layout_height="match_parent"
                    android:digits="0123456789"
                    android:maxLength="1"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:gravity="center"
                    android:background="@drawable/button_shape_small_border_gray"
                    android:textSize="@dimen/_10ssp"
                    />
                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="wrap_content" />

                <com.NativeTech.rehla.Utills.MyEditText
                    android:id="@+id/edit_txt3"
                    android:layout_width="@dimen/_32sdp"
                    style="@style/blabla_et"
                    android:layout_height="match_parent"
                    android:digits="0123456789"
                    android:maxLength="1"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:gravity="center"
                    android:background="@drawable/button_shape_small_border_gray"
                    android:textSize="@dimen/_10ssp"
                    />
                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="wrap_content" />

                <com.NativeTech.rehla.Utills.MyEditText
                    android:id="@+id/edit_txt4"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="match_parent"
                    android:digits="0123456789"
                    android:maxLength="1"
                    style="@style/blabla_et"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:gravity="center"
                    android:background="@drawable/button_shape_small_border_gray"
                    android:textSize="@dimen/_10ssp"
                    />
                <Space
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="wrap_content" />

                <com.NativeTech.rehla.Utills.MyTextView
                    android:id="@+id/plate_num1"
                    android:layout_width="@dimen/_32sdp"
                    style="@style/blabla_et"
                    android:layout_height="match_parent"
                    android:maxLength="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/button_shape_small_border_gray"
                    android:textSize="@dimen/_10ssp"
                    />
                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="wrap_content" />

                <com.NativeTech.rehla.Utills.MyTextView
                    android:id="@+id/plate_num2"
                    android:layout_width="@dimen/_32sdp"
                    style="@style/blabla_et"
                    android:layout_height="match_parent"
                    android:maxLength="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/button_shape_small_border_gray"
                    android:textSize="@dimen/_10ssp"
                    />
                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="wrap_content" />

                <com.NativeTech.rehla.Utills.MyTextView
                    android:id="@+id/plate_num3"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="match_parent"
                    android:maxLength="1"
                    style="@style/blabla_et"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/button_shape_small_border_gray"
                    android:textSize="@dimen/_10ssp"
                    />
                <Space
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="wrap_content" />



            </LinearLayout>

            <com.NativeTech.rehla.Utills.MyEditText
                android:id="@+id/SequenceNumber"
                style="@style/blabla_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/car_sequence_number"
                android:layout_marginStart="@dimen/dime_10"
                android:layout_marginEnd="@dimen/dime_10"
                android:layout_marginTop="@dimen/dime_15"
                android:inputType="number"
                android:digits="0123456789"
                android:textColorHint="@color/gray_unselected"
                />

            <com.NativeTech.rehla.Utills.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dime_10"
                android:text="@string/upload_required_photos"
                android:textAllCaps="false"
                android:padding="@dimen/dime_5"
                android:gravity="center"
                android:layout_marginStart="@dimen/dime_10"
                android:textColor="@color/blakcolor"
                 />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:background="#F6F6F6"
                android:layout_margin="@dimen/dime_10"
                >
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/grycolor"
                    android:weightSum="1.5"
                    >
                    <android.support.v7.widget.LinearLayoutCompat
                        android:id="@+id/car_licence"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:background="@color/app_color"
                        >
                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/car_licence_img"
                            android:layout_width="@dimen/icon2_size"
                            android:layout_height="@dimen/profile_image_size"
                            android:layout_marginTop="@dimen/dime_10"
                            app:srcCompat="@drawable/ic_driver_license_white"
                            />

                        <com.NativeTech.rehla.Utills.MyTextView
                            android:id="@+id/car_licence_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dime_10"
                            android:text="@string/car_licence"
                            android:textAllCaps="false"
                            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                            android:padding="@dimen/dime_5"
                            android:gravity="center"
                            android:textColor="@color/whitecolor"
                             />
                    </android.support.v7.widget.LinearLayoutCompat>
                    <android.support.v7.widget.LinearLayoutCompat
                        android:id="@+id/car_insurance"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        >
                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/car_insurance_img"
                            android:layout_width="@dimen/icon2_size"
                            android:layout_height="@dimen/profile_image_size"
                            android:layout_marginTop="@dimen/dime_10"
                            app:srcCompat="@drawable/ic_insurance"
                            />

                        <com.NativeTech.rehla.Utills.MyTextView
                            android:id="@+id/car_insurance_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                            android:layout_marginBottom="@dimen/dime_10"
                            android:text="@string/car_insurance"
                            android:textAllCaps="false"
                            android:padding="@dimen/dime_5"
                            android:gravity="center"
                            android:textColor="@color/gray_selected"
                             />
                    </android.support.v7.widget.LinearLayoutCompat>
                    <android.support.v7.widget.LinearLayoutCompat
                        android:id="@+id/car_paper"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        >
                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/car_paper_img"
                            android:layout_width="@dimen/icon2_size"
                            android:layout_height="@dimen/profile_image_size"
                            android:layout_marginTop="@dimen/dime_10"
                           app:srcCompat="@drawable/ic_document"
                            />

                        <com.NativeTech.rehla.Utills.MyTextView
                            android:id="@+id/car_paper_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                            android:layout_marginBottom="@dimen/dime_10"
                            android:text="@string/car_paper"
                            android:textAllCaps="false"
                            android:padding="@dimen/dime_5"
                            android:gravity="center"
                            android:textColor="@color/gray_selected"
                             />
                    </android.support.v7.widget.LinearLayoutCompat>

                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.CardView>
            <FrameLayout
                android:layout_width="@dimen/dime_118"
                android:layout_height="@dimen/dime_118"
                android:layout_marginTop="@dimen/dime_26"
                android:background="@drawable/ic_add_image_fram"
                android:layout_gravity="center"
                android:padding="@dimen/margin"
                android:gravity="center"
                >
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/back_img_car_photo"
                    android:layout_width="@dimen/dime_118"
                    android:layout_height="@dimen/dime_118"
                     android:layout_gravity="center"
                    />
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/car_photo"
                    android:layout_width="@dimen/dime_118"
                    android:layout_height="@dimen/dime_118"
                     android:layout_gravity="center"
                    />
            </FrameLayout>

            <com.NativeTech.rehla.Utills.ButtonBold
                android:id="@+id/upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:layout_marginTop="@dimen/dime_26"
                 android:layout_gravity="center"
                android:layout_marginStart="@dimen/dime_10"
                android:layout_marginEnd="@dimen/dime_10"
                android:layout_marginBottom="@dimen/dime_26"
                 android:textColor="@color/whitecolor"
                android:text="@string/save"
                android:background="@drawable/ride_status_green_2"
                />
        </android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>
</android.support.v7.widget.LinearLayoutCompat>