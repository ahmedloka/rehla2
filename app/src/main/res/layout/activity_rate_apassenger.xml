<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitecolor"
    android:orientation="vertical"
    >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:background="@color/app_color"
             >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5"
                >
                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/back"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_back"
                        />

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <com.NativeTech.rehla.Utills.MyTextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_4_height"
                        android:text="@string/offer_a_ride"
                        android:visibility="gone"
                        android:textSize="@dimen/_12ssp"
                        style="@style/tvStyleBold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/whitecolor"
                        android:drawablePadding="@dimen/_4_height"
                        android:layout_margin="@dimen/_4_height"
                        />

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/message_lin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                </android.support.v7.widget.LinearLayoutCompat>

            </LinearLayout>


        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <com.NativeTech.rehla.Utills.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thanks_for_using_rehla"
        android:layout_gravity="center"
        android:paddingStart="@dimen/_4_height"
        android:paddingEnd="@dimen/_4_height"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/_10_height"
        android:gravity="center"
        android:textColor="@color/gray_selected"
        android:textSize="@dimen/_12ssp"
        />
    <com.NativeTech.rehla.Utills.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_the_passenger"
        android:layout_gravity="center"
        android:paddingStart="@dimen/_4_height"
        android:paddingEnd="@dimen/_4_height"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/_10_height"
        android:gravity="center"
        android:textColor="@color/gray_selected"
        android:textSize="@dimen/_12ssp"
        />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10_height"
        android:paddingBottom="@dimen/_4_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="1">

        <com.NativeTech.rehla.Utills.MyTextView
            android:id="@+id/rateFactors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            android:background="@drawable/button_shape_small_border_gray"
            android:gravity="center"
            android:padding="@dimen/_4_height"
            android:text="@string/select"
            android:textAllCaps="false"
            android:textColor="@color/gray_selected"
            android:textSize="@dimen/_12ssp" />
    </android.support.v7.widget.LinearLayoutCompat>
    <com.NativeTech.rehla.Utills.MyEditText
        android:id="@+id/message"
        style="@style/blabla_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_128_dp_height"
        android:inputType="text"
        android:layout_marginTop="@dimen/_10_height"
        android:layout_marginStart="@dimen/_10_height"
        android:layout_marginEnd="@dimen/_10_height"
        android:textColorHint="@color/gray_unselected"
        android:gravity="start"
        android:hint="@string/write_your_comment"
        />
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/_45_height"
        android:weightSum="1">
        <com.NativeTech.rehla.Utills.ButtonBold
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10_height"
            android:layout_marginEnd="@dimen/_10_height"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/whitecolor"
            android:text="@string/send"
            android:background="@drawable/ride_status_green_2"
            />
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>