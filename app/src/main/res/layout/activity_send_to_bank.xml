<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitecolor"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            app:titleTextAppearance="@style/toolbarStyle"
            app:titleTextColor="@color/whitecolor"
            android:background="@color/app_color"
             >



        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:id="@+id/hideKeypord"
            android:layout_height="match_parent">
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/dime_20"
                android:orientation="vertical">

                <com.NativeTech.rehla.Utills.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/We_will_transfer"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/dime_100"
                    android:textAppearance="@style/TextAppearance.Compat.Notification"
                    android:layout_marginBottom="@dimen/dime_26"
                    android:textColor="@color/blakcolor"
                    />



                <com.NativeTech.rehla.Utills.MyEditText
                    android:id="@+id/amount_money"
                    style="@style/etStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dime_10"
                    android:hint="@string/amount_of_money"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:textAppearance="@style/TextAppearance.Compat.Notification"
                    android:background="@drawable/editext_bg"
                    android:textColorHint="@color/gray_unselected" />

                <com.NativeTech.rehla.Utills.MyEditText
                    android:id="@+id/Card_Number"
                    style="@style/etStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dime_10"
                    android:layout_marginBottom="@dimen/dime_10"
                    android:hint="@string/iban_number"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textAppearance="@style/TextAppearance.Compat.Notification"
                    android:background="@drawable/editext_bg"

                    android:textColorHint="@color/gray_unselected" />

                <com.NativeTech.rehla.Utills.MyTextView
                    android:id="@+id/bank_name"
                    style="@style/etStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dime_10"
                    android:layout_marginBottom="@dimen/dime_10"
                    android:gravity="center_vertical"
                    android:text="@string/bank_name"
                    android:textAppearance="@style/TextAppearance.Compat.Notification"
                    android:background="@drawable/editext_bg"

                    android:textColor="@color/gray_unselected"
                    />

                <com.NativeTech.rehla.Utills.ButtonBold
                    android:id="@+id/send"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dime_26"
                    android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                    android:background="@drawable/ride_status_green_2"
                    android:gravity="center"
                    android:text="@string/send"
                    android:textStyle="bold"
                    android:focusable="true"
                    android:textAllCaps="false"
                    android:textColor="@color/whitecolor"
                    />
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v4.widget.NestedScrollView>
  </android.support.v7.widget.LinearLayoutCompat>