<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layoutDirection="ltr"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layoutDirection="ltr"
        >
        <ImageView
            android:id="@+id/countryLogo"
            android:layout_width="@dimen/icon2_size"
            android:layout_height="@dimen/icon2_size"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginRight="@dimen/_10_height"
            android:layout_marginLeft="@dimen/_10_height"


            />
    <com.NativeTech.rehla.Utills.MyTextView
        android:id="@+id/CitytName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10_height"
        android:text="@string/mohammed_sharabash"
        android:textSize="@dimen/_14ssp"

        />

    </LinearLayout>


</android.support.v7.widget.CardView>


