<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitecolor"
    android:orientation="vertical"
    >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            app:titleTextColor="@color/whitecolor"
            app:titleTextAppearance="@style/toolbarStyle"
            app:title=""
            android:background="@color/app_color"
             >


        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <com.NativeTech.rehla.Utills.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10_height"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:text="@string/upload_photos_of_your_licence_or_identity_card"
        android:textAllCaps="false"
        android:padding="@dimen/_4_height"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/blakcolor"

        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:background="#F6F6F6"
        android:visibility="invisible"
        android:layout_margin="@dimen/margint"
        >
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/grycolor"
        android:weightSum="1"
        >
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/identity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.5"
            android:padding="@dimen/margint"
            android:background="@color/green_color"
            >
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/identity_img"
                android:layout_width="@dimen/profile_image_size"
                android:layout_height="@dimen/profile_image_size"
                android:layout_marginTop="@dimen/margint"
               app:srcCompat="@drawable/ic_certificate_white"
                />

            <com.NativeTech.rehla.Utills.MyTextViewBold
                android:id="@+id/identity_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margint"
                style="@style/tvStyleBold"
                android:text="@string/identity"
                android:textAllCaps="false"
                android:padding="@dimen/margin_txt"
                android:gravity="center"
                android:textColor="@color/whitecolor"
                android:textSize="@dimen/lang_txt_size"
                />
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/passport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.5"
            android:padding="@dimen/margint"
            >
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/passport_img"
                android:layout_width="@dimen/profile_image_size"
                android:layout_height="@dimen/profile_image_size"
                android:layout_marginTop="@dimen/margint"
                app:srcCompat="@drawable/ic_certificate"
                />

            <com.NativeTech.rehla.Utills.MyTextViewBold
                android:id="@+id/passport_txt"
                style="@style/tvStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margint"
                android:text="@string/passport"
                android:textAllCaps="false"
                android:padding="@dimen/margin_txt"
                android:gravity="center"
                android:textColor="@color/gray_selected"
                android:textSize="@dimen/lang_txt_size"
                />
        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_margin="@dimen/_10_height"
        >

    </android.support.v7.widget.CardView>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_margin="@dimen/dime_26"
        android:layout_height="0dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_add_image_fram"
            android:gravity="center"
            android:padding="@dimen/dime_10"

            app:layout_constraintBottom_toTopOf="@+id/upload"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.19"
            app:layout_constraintWidth_percent="0.65">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/back_img"
                android:layout_width="@dimen/dime_55"
                android:layout_height="@dimen/dime_55"
                android:layout_gravity="center" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerInside" />
        </FrameLayout>

        <com.NativeTech.rehla.Utills.ButtonBold
            android:id="@+id/upload"
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:background="@drawable/ride_status_green_2"
            android:gravity="center"
            android:text="@string/upload"
            android:textAllCaps="false"
            android:textColor="@color/whitecolor"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.978" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.LinearLayoutCompat>